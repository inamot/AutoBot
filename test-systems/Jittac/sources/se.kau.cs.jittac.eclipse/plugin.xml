<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="se.kau.cs.jittac.eclipse.category.views"
            name="Jittac Views">
      </category>
      <view
            category="se.kau.cs.jittac.eclipse.category.views"
            class="se.kau.cs.jittac.eclipse.ui.views.ReferenceTableView"
            id="se.kau.cs.jittac.eclipse.views.referencelist"
            name="Reference List"
            restorable="true">
      </view>
      <view
            category="se.kau.cs.jittac.eclipse.category.views"
            class="se.kau.cs.jittac.eclipse.ui.views.ComponentFeaturesView"
            id="se.kau.cs.jittac.eclipse.views.componentfeatures"
            name="Feature Distribution per Component"
            restorable="true">
      </view>
      <view
            category="se.kau.cs.jittac.eclipse.category.views"
            class="se.kau.cs.jittac.eclipse.ui.views.FeatureDependencyMatrixView"
            id="se.kau.cs.jittac.eclipse.views.featuredependencymatrix"
            name="Feature Dependency Matrix"
            restorable="true">
      </view>
      <view
            category="se.kau.cs.jittac.eclipse.category.views"
            class="se.kau.cs.jittac.eclipse.ui.views.FeatureLocationTableView"
            id="se.kau.cs.jittac.eclipse.views.featurelocationlist"
            name="Feature Location List"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="se.kau.cs.jittac.eclipse.ui.editors.ArchitectureModelEditor"
            default="false"
            extensions="xam"
            id="se.kau.cs.jittac.eclipse.ui.architecturemodeleditor"
            name="Jittac Architecture Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="se.kau.cs.jittac.eclipse.wizards.new"
            name="Jittac">
      </category>
      <wizard
            category="se.kau.cs.jittac.eclipse.wizards.new"
            class="se.kau.cs.jittac.eclipse.ui.wizards.NewArchitectureModelWizard"
            id="se.kau.cs.jittac.eclipse.new.architecturemodel"
            name="Architecture Model">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="se.kau.cs.jittac.eclipse.ui.ArchitectureModelPropertyPage"
            id="se.kau.cs.jittac.eclipse.properties.architecturemodel"
            name="Architecture Model Properties"
            nameFilter="*.xam"
            objectClass="org.eclipse.core.resources.IFile">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="se.kau.cs.jittac.eclipse.ui.editors.ArchitectureModelEditor"
            class="se.kau.cs.jittac.eclipse.ui.editors.ArchitectureModelOutlineAdapterFactory">
         <adapter
               type="org.eclipse.ui.views.contentoutline.IContentOutlinePage">
         </adapter>
      </factory>
   </extension>
   <extension
         id="se.kau.cs.jittac.eclipse.natures.java"
         name="Jittac Java Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="se.kau.cs.jittac.eclipse.JittacJavaNature">
         </run>
      </runtime>
   </extension>
   <extension
         id="se.kau.cs.jittac.eclipse.builders.jdt"
         name="Jittac Analysis for Java"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="se.kau.cs.jittac.eclipse.builders.jdt.JavaImplementationModelBuilder">
         </run>
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="se.kau.cs.jittac.eclipse.builders.jdt.commands.DisableJavaCodeAnalysisHandler"
            commandId="se.kau.cs.jittac.eclipse.builders.jdt.commands.disable">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <adapt
                        type="org.eclipse.core.resources.IProject">
                     <and>
                        <test
                              property="org.eclipse.core.resources.open"
                              value="true">
                        </test>
                        <test
                              property="org.eclipse.core.resources.projectNature"
                              value="se.kau.cs.jittac.eclipse.natures.java">
                        </test>
                     </and>
                  </adapt></iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="se.kau.cs.jittac.eclipse.builders.jdt.commands.EnableJavaCodeAnalysisHandler"
            commandId="se.kau.cs.jittac.eclipse.builders.jdt.commands.enable">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <adapt
                        type="org.eclipse.core.resources.IProject">
                     <and>
                        <test
                              property="org.eclipse.core.resources.open"
                              value="true">
                        </test>
                        <test
                              property="org.eclipse.core.resources.projectNature"
                              value="org.eclipse.jdt.core.javanature">
                        </test>
                        <not>
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="se.kau.cs.jittac.eclipse.natures.java">
                           </test>
                        </not>
                     </and>
                  </adapt>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="se.kau.cs.jittac.eclipse.menues.popup"
               label="Jittac">
            <command
                  commandId="se.kau.cs.jittac.eclipse.builders.jdt.commands.enable"
                  id="se.kau.cs.jittac.menus.popup.enable"
                  label="Enable Java code analysis"
                  style="radio">
               <visibleWhen
                     checkEnabled="true">
               </visibleWhen>
            </command>
            <command
                  commandId="se.kau.cs.jittac.eclipse.builders.jdt.commands.disable"
                  id="se.kau.cs.jittac.menus.popup.disable"
                  label="Disable Java code analysis">
               <visibleWhen
                     checkEnabled="true">
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="se.kau.cs.jittac.eclipse.codesupport.ProblemMarker"
         name="Architectural Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.textmarker">
      </super>
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="false">
      </persistent>
   </extension>

</plugin>
